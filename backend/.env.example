# Server Configuration
HOST=127.0.0.1
PORT=9000

# SSL/TLS (optional)
SSL_CERT_PATH=
SSL_KEY_PATH=

# API Authentication
API_KEY=dev-key-change-in-production

# Application Password (bcrypt hash)
# IMPORTANT: Password must be at least 12 characters
# Default password: "oreadpassword" (change this!)
# To generate a new hash, use Node.js:
#   node -e "const bcrypt = require('bcrypt'); bcrypt.hash('your-password-here', 12, (e,h) => console.log(h));"
APP_PASSWORD_HASH=$2b$12$placeholder_you_must_generate_your_own_bcrypt_hash

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=info

# Web Search
ENABLE_WEB_SEARCH=false

# Memory Retrieval (semantic search in past conversations)
# When enabled, includes relevant past conversations in AI context
# Adds ~200-500ms latency per request but improves conversation continuity
ENABLE_MEMORY=false

# File Paths
PROFILES_DIR=../data/profiles

# Inference Service (Python microservice)
INFERENCE_SERVICE_URL=http://localhost:9001

# Model Paths (for reference only - inference service handles all model loading)
#EMOTION_MODEL_PATH=
#LLM_MODEL_PATH=
